<%= form_with(model: user) do |form|%>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :avatar,style:"display:none" %>
    <%= form.file_field :avatar, direct_upload: true, accept: "image/jpeg, image/gif, image/png" %>
    <hr>
  </div>
  <div class="field">
    <%= form.label :name,style:"display:none" %>
    <%= form.text_field :name,placeholder:"Name",class:"form-input" %>
    <hr>
  </div>
  <div class="field">
    <%= form.label :email,style:"display:none" %>
    <%= form.text_field :email,placeholder:"Email",class:"form-input" %>
    <hr>
  </div>
  <div class="actions">
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>
